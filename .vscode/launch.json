    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Default App Live Editing",
            "type": "node",
            "request": "launch",
            "args": ["scripts/publish-script.js", "${NPM_TAG}"],
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Node migration tests",
            "args": [
                "-r",
                "ts-node/register",
                "./node_modules/jasmine/bin/jasmine.js",
                "./projects/igniteui-angular/migrations/common/UpdateChanges.spec.ts"
            ],
            "env": {
                "TS_NODE_PROJECT": "projects/igniteui-angular/migrations/tsconfig.json"
            }
        }
    ]
}
