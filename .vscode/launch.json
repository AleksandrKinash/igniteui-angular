    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Node migration tests",
            "args": [
                "-r",
                "ts-node/register",
                "./node_modules/jasmine/bin/jasmine.js",
                "./projects/igniteui-angular/migrations/common/UpdateChanges.spec.ts"
            ],
            "env": {
                "TS_NODE_PROJECT": "projects/igniteui-angular/migrations/tsconfig.json"
            }
        },
        {
            "name": "Run migration",
            "request": "launch",
            "type": "node",
            "cwd": "C:\\IgniteUI-Repos\\igniteui-angular-samples",
            "args": [
                "-r",
                "ts-node/register",
                "C:/Users/BPenkov/AppData/Roaming/npm/node_modules/@angular/cli/bin/ng",
                "g",
                "../../../../../IgniteUI-Repos/igniteui-angular/projects/igniteui-angular/migrations/migration-collection.json:migration-17"
            ],
            "env": {
                "TS_NODE_PROJECT": "C:\\IgniteUI-Repos\\igniteui-angular\\projects\\igniteui-angular\\migrations\\tsconfig.json"
            }
        },
    ]
}
